

  <div id="container">
    <h1 class="mt-5 mb-4">Log In</h1>
    <div>
    <form id="login" action="/user/login" onsubmit="return login()" method="post">        
       
        <div class="row mb-4">
        <input type="text" name="email" id="email" class="form-control" placeholder="Email">
        </div>
        <div class="row mb-4">
        <input type="password" name="password" id="password" class="form-control" placeholder="Password">
        </div>
        <div class="row mb-4 d-flex flex-row-reverse">
        <a href="/user/forgot">Forgot Password</a>
        </div>
        <div class="row mb-4">
        <input type="submit" id="submit" class="btn btn-success" value="Login">
        </div>
        <div class="row px-auto">
        {{#if messages.error}}  
        <b style="line-height:2rem" id="err" class="text-danger">{{messages.error}}</b>
        {{else}}
        <b id="error_L" class="text-danger"></b>
        {{/if}}
        </div>
        <div class="row mx-auto">
        <b class="px-5 mx-5">Don't have an account?  <span><a href="/user/signup">Register Here</a></span></b>
        </div>
    </form>
    </div>
  </div>
