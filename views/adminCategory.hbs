<div class="container mx-auto d-flex justify-content-between">
<h1 class="ms-0">Category Management</h1>
<div class="mt-5">
<a class="btn btn-success" href="/admin/addcategory">Add Category</a>
</div>
</div>
<div class="container vh-100 mx-auto">
<table class="table align-middle text-center mt-4" id="datatable">
  <thead class="bg-success text-light">
    <tr>
      <th style="width: 16.66%">Category Name</th>
      <th style="width: 16.66%">Icon</th>
      <th style="width: 16.66%">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each categoryList}}
    <tr>      
      <td><p class="mx-0 mb-1">{{name}}</p></td>  
      <td><i class="me-4 fs-4 {{icon}}" style="color:{{color}}"aria-hidden="true"></i></p></td>
      <td class="text-center">
         <ul class="d-flex justify-content-center" style="list-style-type: none;">        
        <li class="px-lg-0">
          <button class="btn btn-danger delete-cat" id="delete" data-url={{_id}}>Delete</button>
        </li>        
        </ul>
      </td>
    </tr>    
    {{/each}} 
  </tbody>
</table>
</div>
<script src="/javascript/deleteCategory.js"></script> 