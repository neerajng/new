{{> userNavbar}}
<div style="background-image: linear-gradient(to top, #bdc2e8 0%, #bdc2e8 1%, #e6dee9 100%);">

<section class="mt-2 ">
  <div class="row container-fluid m-0 bg-light p-4 shadow bg-body-tertiary rounded-4 bg-white p-3">
    <h5 class="pb-4">Select your current Address:</h5>
    <div>
      {{#each user.address}}
      <div class="d-flex justify-content-between w-50 mb-3">
      <div>  
      <input type="radio" class="pb-2" id="address" name="address" value="{{_id}}">
      {{houseName}},
      {{phone}},
      {{city}} , {{pincode}}
      {{state}} , {{country}}
      
      </div>    
      <div></div>
      <div></div>
      <a class="btn btn-white" href='/edit/address/{{_id}}'>
              <i class="fa-solid fa-pen-to-square"></i>
      </a>
      </div>   
      <hr class="w-50">   
      {{/each}}
      
    </div>
  </div>

  <div class="row container-fluid p-5">
    <div class=" col-md-8 mb-4">
      <div class="card mb-4 shadow bg-body-tertiary rounded-4 bg-white p-3">
        <div class="card-header py-3">
          <h5 class="mb-0">Delivery Address</h5>
        </div>
        <div class="card-body">

          <form action="/order/address/{{user.id}}" method="post" id="order">
            <div class="row mb-4">
              <!-- Text input -->
              <div class="form-outline mb-4">
                <input type="text" id="form7Example3" class="form-control" name="houseName" required />
                <label class="form-label" for="form7Example3">House Name</label>
              </div>

              <!-- Text input -->
              <div class="form-outline mb-1">
                <input type="text" id="form7Example3" name="phone" class="form-control" required />
                <label class="form-label" for="form7Example3">Phone</label>
              </div>
            </div>

            <!-- Row 1 -->
            <div class="row mb-4">
              <!-- City input -->
              <div class="form-group col-md-6">
                <input type="text" id="form7Example4" name="city" class="form-control" required />
                <label class="form-label" for="form7Example4">City</label>
              </div>

              <!-- Postal Code input -->
              <div class="form-group col-md-6">
                <input type="text" id="form7Example4" name="postalCode" class="form-control" required />
                <label class="form-label" for="form7Example4">Postal Code</label>
              </div>
            </div>

            <!-- Row 2 -->
            <div class="row mb-4">
              <!-- State input -->
              <div class="form-group col-md-6">
                <input type="text" id="form7Example4" name="state" class="form-control" required />
                <label class="form-label" for="form7Example4">State</label>
              </div>

              <!-- Country input -->
              <div class="form-group col-md-6">
                <input type="text" id="form7Example4" name="country" class="form-control" required />
                <label class="form-label" for="form7Example4">Country</label>
              </div>
            </div>


            <div class="form-check d-flex justify-content-center mb-2">
              <input type="Submit" class="btn btn-success px-5" value="Submit">
            </div>

          </form>
        </div>
      </div>
    </div>

    <div class="col-md-4 mb-4 ">
      <div class="card mb-4 shadow bg-body-tertiary rounded-4 bg-white ">
        <div class="card-header py-3">
          <h5 class="mb-0">Order Summary</h5>
        </div>
        <div class="card-body">
          <ul class="list-group list-group-flush">
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0">
              Total Items
              <span>{{totalQuantity}}</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center px-0">
              Shipping
              <span>Gratis</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3">
              <div>
                <strong>Total amount</strong>
                <strong>
                  <p class="mb-0">(including VAT)</p>
                </strong>
              </div>
              <span><strong class="order-price fa fa-inr">{{totalPrice}}</strong></span>
            </li>
          </ul>
          {{#if couponApplied}}          
          <div class="text-center py-3 mb-2"><a class="btn px-5 fw-bold text-success"
              style="background:rgb(0, 255, 136);">{{couponMessage}}</a></div>
          {{else}}
          <div class="text-center py-3 mb-2"><a {{#if (eq totalQuantity 0)}}href="#"{{/if}} href="/user-coupon" class="btn px-5 fw-bold text-success"
              style="background:rgb(0, 255, 136); "  >Apply Coupon</a></div>
          {{/if}}
          <div class="d-flex justify-content-around ">
          <a class="btn btn-payment btn-warning btn-cod ms-4 mb-3" style="font-size: 14px;">Cash On Delivery</a>
          <a class="btn btn-razor btn-danger btn-razor px-5 mb-3" style="font-size: 14px;">Razor pay</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
<div class="my-5 py-2 dummydivforspace">
        <div></div>
    </div>

    <footer class="container-fluid text-lg-start" style="font-size:12px">
        <div class="text-center text-black pb-5 fw-normal">
            © 2023 Copyright:
            <a class="text-black text-decoration-none" href="#">ShopWine.com made with
                <span class="text-danger fs-6">❤</span> by - Neeraj </a>
        </div>
    </footer>
</div>
<script src="/javascript/order.js"></script>
<script src="https://checkout.razorpay.com/v1/checkout.js"></script>