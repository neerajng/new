<style>
/* The side navigation menu */
.sidebar {
  margin: 0;
  padding: 0;
  width: 200px;
  background-color: #ffebc7;
  position: absolute;
  height: 90%;
  overflow: auto;
  z-index: 1001;  
}

/* Sidebar links */
.sidebar a {
  display: block;
  color: black;
  font-weight:bold;
  padding: 16px;
  text-decoration: none;
}

/* Active/current link */
.sidebar a.active {
  background-color: #003547;
  color: white;
}

/* Links on mouse-over */
.sidebar a:hover:not(.active) {
  background-color: #e0d9d7;
  color: rgb(0, 0, 0);
}

/* Page content. The value of the margin-left property should match the value of the sidebar's width property */
div.content {
  margin-left: 200px;
  padding: 1px 16px;
  height: 1000px;
}

/* On screens that are less than 700px wide, make the sidebar into a topbar */
@media screen and (max-width: 700px) {
  .sidebar {
    width: 100%;
    height: auto;
    position: relative;
  }
  .sidebar a {float: left;}
  div.content {margin-left: 0;}
}

/* On screens that are less than 400px, display the bar vertically, instead of horizontally */
@media screen and (max-width: 400px) {
  .sidebar a {
    text-align: center;
    float: none;
  }
}

</style>


<!-- The sidebar -->
<div class="sidebar">
  <a class="btn {{#if home}}active{{/if}}" href="/admin/home">Dashboard</a>
  <a class="btn {{#if users}}active{{/if}}" href="/admin/users">Users</a>
  <a class="btn {{#if Category}}active{{/if}}" href="/admin/category">Category</a>
  <a class="btn {{#if products}}active{{/if}}" href="/admin/products">Products</a>
  <a class="btn {{#if orders}}active{{/if}}" href="/admin/orders">Orders</a>
  <a class="btn {{#if chart}}active{{/if}}" href="/admin/chart">Chart</a> 
  <a class="btn {{#if coupon}}active{{/if}}" href="/admin/coupons">Coupon</a>  
  <a class="btn {{#if offers}}active{{/if}}" href="/admin/offers">Offers</a>  
</div>



